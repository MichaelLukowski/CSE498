<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white">

    <Button
        android:id="@+id/search_companies"
        android:text="@string/search_companies_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="@dimen/menu_title"
        android:background="@color/yello_normal"
        android:onClick="searchCompanies"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white"
        android:layout_above="@+id/user_info"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:src="@drawable/yello_logo"
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="197dp"
        android:layout_marginBottom="84dp"
        android:layout_above="@+id/scan_logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/scan_logo"
        android:text="@string/scan_logo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="@dimen/menu_title"
        android:background="@color/yello_normal"
        android:onClick="scanLogo"
        android:layout_marginBottom="39dp"
        android:textColor="@color/white"
        android:layout_above="@+id/search_companies"
        android:layout_alignLeft="@+id/search_companies"
        android:layout_alignStart="@+id/search_companies"
        android:layout_alignRight="@+id/search_companies"
        android:layout_alignEnd="@+id/search_companies" />

    <Button
        android:id="@+id/user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/search_companies"
        android:layout_alignLeft="@+id/search_companies"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/search_companies"
        android:layout_alignStart="@+id/search_companies"
        android:layout_marginBottom="25dp"
        android:background="@color/yello_normal"
        android:onClick="userInfo"
        android:paddingBottom="20dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="20dp"
        android:text="@string/user_info_button"
        android:textColor="@color/white"
        android:textSize="@dimen/menu_title" />

</RelativeLayout>